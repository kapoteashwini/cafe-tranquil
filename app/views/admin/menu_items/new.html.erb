<div class="container">
  <h1>New Menu Item</h1>
  <%= form_with(model: [:admin, @menu_item], local: true, html: { multipart: true }) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, step: 0.01, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>
    <%= form.submit 'Create Menu Item', class: 'btn btn-primary' %>
  <% end %>
</div>
