<div class="container">
  <h1>Menu Items</h1>
  <%= link_to 'Add New Item', new_admin_menu_item_path, class: 'btn btn-primary' %>
  <table class="table mt-3">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @menu_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= number_to_currency(item.price) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
