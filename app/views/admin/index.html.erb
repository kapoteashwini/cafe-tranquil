<div class="container">
  <h1>Orders</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>User</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.user.name %></td>
          <td><%= order.status %></td>
          <td>
            <%= link_to 'View', order_path(order), class: 'btn btn-primary' %>
            <%= link_to 'Mark as Served', mark_as_served_path(order), method: :patch, class: 'btn btn-success' %>
            <%= link_to 'Generate Invoice', generate_invoice_path(order), method: :patch, class: 'btn btn-warning' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
