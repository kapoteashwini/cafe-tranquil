<h1>Invoice for Order <%= @order.id %></h1>

<p>
  <strong>Date:</strong>
  <%= @order.created_at.strftime("%B %d, %Y") %>
</p>

<p>
  <strong>Items:</strong>
  <ul>
    <% @order.items.each do |item| %>
      <li><%= item.name %> - <%= item.quantity %> x <%= number_to_currency(item.price) %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Total:</strong>
  <%= number_to_currency(@order.total_price) %>
</p>
